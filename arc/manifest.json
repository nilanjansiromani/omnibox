{
  "manifest_version": 3,
  "name": "SuperOmniBar (Arc)",
  "version": "1.0.0",
  "description": "A liquid glass-styled omnibar for quick access to tabs, bookmarks, and history - Arc optimized",
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fuzzy-search.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "open-omnibar": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open SuperOmniBar"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
