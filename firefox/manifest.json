{
  "manifest_version": 3,
  "name": "SuperOmniBar",
  "version": "1.0.0",
  "description": "A liquid glass-styled omnibar for quick access to tabs, bookmarks, and history",
  "permissions": [
    "tabs",
    "bookmarks",
    "history",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fuzzy-search.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "open-omnibar": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open SuperOmniBar"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "superomnibar@example.com",
      "strict_min_version": "109.0"
    }
  }
}
